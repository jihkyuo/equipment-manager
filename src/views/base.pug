doctype html
html(lang="ko")
    head
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        title #{pageTitle} | #{siteName}
    body 
        header 
            h1=pageTitle
        main 
            nav 
                ul 
                    li 
                        a(href="/") Home
                    if loggedIn
                        li 
                            a(href="/users/edit") #{loggedInUser.name}의 Profile
                        li 
                            a(href="/users/logout") Logout
                        li 
                            a(href="/equip/upload") Upload Equip
                    else
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    li 
                         a(href="/search") Search
            block content
    
    //- partial의 pug include 가져오기
    include partials/footer.pug