extends base

block content 
    img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")    
        input(placeholder="Name을 입력하세요.", name="name", type="text", value=loggedInUser.name, required)
        input(placeholder="Email을 입력하세요.", name="email", type="email",value=loggedInUser.email, required)
        input(placeholder="Username을 입력하세요.",name="username", type="text",value=loggedInUser.username, required)
        input(placeholder="Location을 입력하세요.",name="location", type="text",value=loggedInUser.location, required)
        input(type="submit", value="Update Profile")   
        if !loggedInUser.socialOnly
                hr
                a(href='change-password') Change Password &rarr;